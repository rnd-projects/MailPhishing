<Window x:Class="Mail_Phishing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISD Mail Phishing"
        Height="645"
        Width="635"
        ResizeMode="NoResize">

    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />

            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />

            <RowDefinition Height="25*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>

        <Label Name ="DLSearchLabel"
               Content="Distribution List:"
               Grid.Row="0"
               Grid.RowSpan="1"
               Grid.Column="0"
               Grid.ColumnSpan="4" />

        <TextBox Name="DLSearchTextbox"
                 TextWrapping="Wrap"
                 Text=""
                 TextChanged="DLSearchTextbox_TextChanged"
                 Grid.Row="0"
                 Grid.RowSpan="1"
                 Grid.Column="4"
                 Grid.ColumnSpan="11" />

        <Button Name="DLSearchSubmitButton"
                Content="Search"
                Click="DLSearchSubmitButton_Click"
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="16"
                Grid.ColumnSpan="2" />

        <DataGrid Name="DLGrid"
                  Grid.Row="2"
                  Grid.RowSpan="20"
                  Grid.Column="0"
                  Grid.ColumnSpan="24"
                  AutoGenerateColumns="False"
                  SelectionMode="Extended"
                  IsReadOnly="True"
                  SelectionChanged="DLGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Distribution List"
                    Width="5*"
                    Binding="{Binding CN}" />

                <DataGridTextColumn
                    Header="Type"
                    Width="1*"
                    Binding="{Binding DTypeDescription}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Name="DLSendMailButton"
                Content="Send Mail"
                Grid.Row="23"
                Grid.RowSpan="1"
                Grid.Column="21"
                Grid.ColumnSpan="3"
                IsEnabled="False"
                Click="DLSendMailButton_Click">
        </Button>
    </Grid>
</Window>
